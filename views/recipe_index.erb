<h2>Recipe Index</h2>
<ul class="list-group">
    <% @recipe.each do |recipe| %>
    <li class="list-group-item">
        <% recipe.name %>
        <a href="/recipes/<%= recipe.drink_name %>/edit">Edit Recipe</a>
        <form action="/recipes/<%= recipe.drink_name %>" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button>Delete</button>
        </form>
    </li>
    <% end %>
</ul>